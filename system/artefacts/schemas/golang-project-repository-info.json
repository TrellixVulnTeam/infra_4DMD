{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Golang project repository info",
	"description": "Repository basic information and list of commits",
	"type": "object",
	"properties": {
		"artefact": {
			"description": "Artefact name",
			"type": "string"
		},
		"repository": {
			"anyOf": [
				{ "$ref": "#/definitions/github" },
				{ "$ref": "#/definitions/bitbucket" }
			]
		},
		"branches": {
			"description": "List of branches",
			"type": "array",
			"items": {
				"description": "Branch name",
				"type": "string"
			}
		},
		"coverage": {
			"description": "List of covered date intervals",
			"type": "array",
			"items": {
				"description": "date interval",
				"type": "object",
				"properties": {
					"start": {
						"description": "start timestamp",
						"type": "integer"
					},
					"end": {
						"description": "end timestamp",
						"type": "integer"
					}
				},
				"required": ["start", "end"]
			}
		},
		"commits": {
			"description": "List of commits",
			"type": "array",
			"items": {
				"description": "Commit hexsha",
				"type": "string"
			}
		}
	},
	"required": [
		"artefact",
		"repository",
		"branches",
		"commits"
	],
	"definitions": {
		"github": {
			"description": "Github repository",
			"type": "object",
			"properties": {
				"provider": {
					"description": "Provider",
					"type": "string",
					"oneOf": [
						{"enum": ["github"]}
					]
				},
				"username": {
					"description": "Github username",
					"type": "string",
					"minLength": 1
				},
				"project": {
					"description": "Github project",
					"type": "string",
					"minLength": 1
				}
			},
			"required": ["provider", "username", "project"]
		},
		"bitbucket": {
			"description": "Bitbucket repository",
			"type": "object",
			"properties": {
				"provider": {
					"description": "Provider",
					"type": "string",
					"oneOf": [
						{"enum": ["bitbucket"]}
					]
				},
				"username": {
					"description": "Bitbucket username",
					"type": "string",
					"minLength": 1
				},
				"project": {
					"description": "Bitbucket project",
					"type": "string",
					"minLength": 1
				}
			},
			"required": ["provider", "username", "project"]
		}
	}
}
