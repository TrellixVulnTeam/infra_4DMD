{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Golang project repository commits cache",
	"description": "Repository list of commits with theirs commit date",
	"type": "object",
	"properties": {
		"artefact": {
			"description": "Artefact name",
			"type": "string",
			"oneOf": [
				{"enum": ["cache-golang-project-repository-commits"]}
			]
		},
		"repository": {
			"anyOf": [
				{ "$ref": "#/definitions/github" },
				{ "$ref": "#/definitions/bitbucket" }
			]
		},
		"coverage": {
			"description": "List of covered date intervals",
			"type": "array",
			"items": {
				"description": "date interval",
				"type": "object",
				"properties": {
					"start_timestamp": {
						"description": "start timestamp",
						"type": "integer"
					},
					"end_timestamp": {
						"description": "end timestamp",
						"type": "integer"
					}
				},
				"required": ["start_date", "end_date"]
			}
		},
		"commits": {
			"description": "List of commits",
			"type": "array",
			"items": {
				"description": "Commit with commit date timestamps",
				"type": "object",
				"properties": {
					"c": {
						"description": "commit",
						"type": "string",
						"minLength": 1
					},
					"d": {
						"description": "commit data timestamp",
						"type": "string",
						"minLength": 1
					}
				},
				"required": ["c", "d"]
			},
			"uniqueItems": true
		}
	},
	"required": [
		"artefact",
		"repository",
		"coverage",
		"commits"
	],
	"definitions": {
		"github": {
			"description": "Github repository",
			"type": "object",
			"properties": {
				"provider": {
					"description": "Provider",
					"type": "string",
					"oneOf": [
						{"enum": ["github"]}
					]
				},
				"username": {
					"description": "Github username",
					"type": "string",
					"minLength": 1
				},
				"project": {
					"description": "Github project",
					"type": "string",
					"minLength": 1
				}
			},
			"required": ["provider", "username", "project"]
		},
		"bitbucket": {
			"description": "Bitbucket repository",
			"type": "object",
			"properties": {
				"provider": {
					"description": "Provider",
					"type": "string",
					"oneOf": [
						{"enum": ["bitbucket"]}
					]
				},
				"username": {
					"description": "Bitbucket username",
					"type": "string",
					"minLength": 1
				},
				"project": {
					"description": "Bitbucket project",
					"type": "string",
					"minLength": 1
				}
			},
			"required": ["provider", "username", "project"]
		}
	}
}
