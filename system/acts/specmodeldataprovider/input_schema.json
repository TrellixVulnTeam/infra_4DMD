{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Spec model data provider act",
	"description": "Definition of act providing data for spec model.",
	"anyOf": [
		{ "$ref": "#/definitions/upstream_source_code" },
		{ "$ref": "#/definitions/user_directory" }
	],
	"definitions": {
		"upstream_source_code": {
			"type": "object",
			"description": "Upstream source codes",
			"properties": {
				"type": {
					"type": "string",
					"description": "Input type",
					"oneOf": [
						{"enum": ["upstream_source_code"]}
					]
				},
				"repository": {
					"anyOf": [
						{ "$ref": "#/definitions/github" },
						{ "$ref": "#/definitions/bitbucket" }
					]
				},
				"commit": {
					"type": "string",
					"description": "Repository commit",
					"minLength": 1
				},
				"ipprefix": {
					"type": "string",
					"description": "Import path prefix",
					"minLength": 1
				}
			},
			"required": ["type", "repository", "commit", "ipprefix"],
			"additionalProperties": false
		},
		"user_directory": {
			"type": "object",
			"description": "User directory",
			"properties": {
				"type": {
					"type": "string",
					"description": "Input type",
					"oneOf": [
						{"enum": ["user_directory"]}
					]
				},
				"ipprefix": {
					"type": "string",
					"description": "Import path prefix",
					"minLength": 1
				},
				"resource": {
					"type": "string",
					"description": "User directory location",
					"minLength": 1
				}
			},
			"required": ["type", "ipprefix", "resource"],
			"additionalProperties": false
		},
		"github": {
			"description": "Github repository",
			"type": "object",
			"properties": {
				"provider": {
					"description": "Provider",
					"type": "string",
					"oneOf": [
						{"enum": ["github"]}
					]
				},
				"username": {
					"description": "Github username",
					"type": "string",
					"minLength": 1
				},
				"project": {
					"description": "Github project",
					"type": "string",
					"minLength": 1
				}
			},
			"required": ["provider", "username", "project"]
		},
		"bitbucket": {
			"description": "Bitbucket repository",
			"type": "object",
			"properties": {
				"provider": {
					"description": "Provider",
					"type": "string",
					"oneOf": [
						{"enum": ["bitbucket"]}
					]
				},
				"username": {
					"description": "Bitbucket username",
					"type": "string",
					"minLength": 1
				},
				"project": {
					"description": "Bitbucket project",
					"type": "string",
					"minLength": 1
				}
			},
			"required": ["provider", "username", "project"]
		}
	}
}
