{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Spec model data provider act",
	"description": "Definition of act providing data for spec model.",
	"anyOf": [
		{ "$ref": "#/definitions/upstream_source_code" },
		{ "$ref": "#/definitions/user_directory" }
	],
	"definitions": {
		"upstream_source_code": {
			"type": "object",
			"description": "Upstream source codes",
			"properties": {
				"type": {
					"type": "string",
					"description": "Input type",
					"oneOf": [
						{"enum": ["upstream_source_code"]}
					]
				},
				"project": {
					"type": "string",
					"description": "Project name",
					"minLength": 1
				},
				"commit": {
					"type": "string",
					"description": "Repository commit",
					"minLength": 1
				},
				"ipprefix": {
					"type": "string",
					"description": "Import path prefix",
					"minLength": 1
				}
			},
			"required": ["type", "project", "commit", "ipprefix"],
			"additionalProperties": false
		},
		"user_directory": {
			"type": "object",
			"description": "User directory",
			"properties": {
				"type": {
					"type": "string",
					"description": "Input type",
					"oneOf": [
						{"enum": ["user_directory"]}
					]
				},
				"ipprefix": {
					"type": "string",
					"description": "Import path prefix",
					"minLength": 1
				},
				"resource": {
					"type": "string",
					"description": "User directory location",
					"minLength": 1
				}
			},
			"required": ["type", "ipprefix", "resource"],
			"additionalProperties": false
		}
	}
}
