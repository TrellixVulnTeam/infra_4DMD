{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "Repository information and commit search criteria",
	"title": "Git commit extractor plugin",
	"type": "object",
	"properties": {
		"repository": {
			"anyOf": [
				{ "$ref": "#/definitions/github" },
				{ "$ref": "#/definitions/bitbucket" }
			]
		},
		"resource": {
		  "description": "Repository directory",
		  "type": "string"
		},
		"start_date": {
		  "description": "Commits since date",
		  "type": "string"
		},
		"end_date": {
		  "description": "Commits to date",
		  "type": "string"
		}
	},
	"required": [
	  "repository",
	  "resource"
	],
	"definitions": {
		"github": {
			"description": "Github repository",
			"type": "object",
			"properties": {
				"provider": {
					"description": "Provider",
					"type": "string",
					"oneOf": [
						{"enum": ["github"]}
					]
				},
				"username": {
					"description": "Github username",
					"type": "string",
					"minLength": 1
				},
				"project": {
					"description": "Github project",
					"type": "string",
					"minLength": 1
				}
			},
			"required": ["provider", "username", "project"]
		},
		"bitbucket": {
			"description": "Bitbucket repository",
			"type": "object",
			"properties": {
				"provider": {
					"description": "Provider",
					"type": "string",
					"oneOf": [
						{"enum": ["bitbucket"]}
					]
				},
				"username": {
					"description": "Bitbucket username",
					"type": "string",
					"minLength": 1
				},
				"project": {
					"description": "Bitbucket project",
					"type": "string",
					"minLength": 1
				}
			},
			"required": ["provider", "username", "project"]
		}
	}
}
