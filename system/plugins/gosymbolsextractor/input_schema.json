{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Golang symbols extractor plugin",
	"description": "Definition of packages of a golang project",
	"type": "object",
	"properties": {
		"resource": {
			"type": "string",
			"description": "Directory with Go source codes",
			"minLength": 1
		},
		"repository": {
			"anyOf": [
				{ "$ref": "#/definitions/github" },
				{ "$ref": "#/definitions/bitbucket" }
			]
		},
		"commit": {
			"type": "string",
			"description": "Commit of projetc's source codes",
			"minLength": 1
		},
		"ipprefix": {
			"type": "string",
			"description": "Import path prefix",
			"minLength": 1
		}
	},
	"required": ["resource"],
	"definitions": {
		"github": {
			"description": "Github repository",
			"type": "object",
			"properties": {
				"provider": {
					"description": "Provider",
					"type": "string",
					"oneOf": [
						{"enum": ["github"]}
					]
				},
				"username": {
					"description": "Github username",
					"type": "string",
					"minLength": 1
				},
				"project": {
					"description": "Github project",
					"type": "string",
					"minLength": 1
				}
			},
			"required": ["provider", "username", "project"]
		},
		"bitbucket": {
			"description": "Bitbucket repository",
			"type": "object",
			"properties": {
				"provider": {
					"description": "Provider",
					"type": "string",
					"oneOf": [
						{"enum": ["bitbucket"]}
					]
				},
				"username": {
					"description": "Bitbucket username",
					"type": "string",
					"minLength": 1
				},
				"project": {
					"description": "Bitbucket project",
					"type": "string",
					"minLength": 1
				}
			},
			"required": ["provider", "username", "project"]
		}
	}
}
