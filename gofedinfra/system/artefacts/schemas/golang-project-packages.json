{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Golang project packages artefact",
	"description": "Definition of packages of a golang project",
	"type": "object",
	"properties": {
		"artefact": {
			"description": "Artefact name",
			"type": "string"
		},
		"repository": {
			"anyOf": [
				{ "$ref": "#/definitions/github" },
				{ "$ref": "#/definitions/bitbucket" }
			]
		},
		"commit": {
			"description": "Repository project commit",
			"type": "string"
		},
		"ipprefix": {
			"description": "Import path prefix",
			"type": "string"
		},
		"data": {
			"description": "Data",
			"type": "object",
			"properties": {
				"packages": {
					"description": "List of defined packages with exported symbols",
					"type": "array",
					"items": {
						"type": "string",
						"description": "Package"
					},
					"uniqueItems": true
				},
				"dependencies": {
					"description": "List of dependencies for each defined package",
					"type": "array",
					"items": {
						"type": "object",
						"description": "list of dependencies",
						"properties": {
							"package": {
								"type": "string",
								"description": "importable package name/path",
								"minLength": 1
							},
							"qualifier": {
								"type": "string",
								"description": "imported package qualifier"
							},
							"dependencies": {
								"type": "array",
								"description": "dependencies",
								"items": {
									"type": "object",
									"description": "dependency data",
									"properties": {
										"name": {
											"type": "string",
											"description": "dependency"
										},
										"location": {
											"type": "array",
											"description": "list of files importing dependency",
											"items": {
												"type": "string",
												"description": "file",
												"minLength": 1
											},
											"uniqueItems": true
										}
									},
									"required": ["name"]
								},
								"uniqueItems": true
							}
						},
						"required": ["package", "qualifier", "dependencies"]
					},
					"uniqueItems": true
				},
				"tests": {
					"description": "List of tests",
					"type": "array",
					"items": {
						"type": "object",
						"description": "test",
						"properties": {
							"test": {
								"type": "string",
								"description": "test name",
								"minLength": 1
							},
							"dependencies": {
								"type": "array",
								"description": "dependencies",
								"items": {
									"type": "string",
									"description": "dependency"
								},
								"uniqueItems": true
							}
						}
					},
					"uniqueItems": true
				},
				"main": {
					"description": "List of files with 'package main' clause",
					"type": "array",
					"items": {
						"type": "object",
						"description": "Buildable main go file",
						"object": {
							"filename": {
								"type": "string",
								"description": "main filename",
								"minLength": 1
							},
							"dependencies": {
								"type": "array",
								"description": "dependencies",
								"items": {
									"type": "string",
									"description": "dependency"
								},
								"uniqueItems": true
							}
						},
						"required": ["filename"]
					},
					"uniqueItems": true
				}
			},
			"required": ["packages", "dependencies"]
		}
	},
	"required": ["artefact", "ipprefix", "data"],
	"definitions": {
		"github": {
			"description": "Github repository",
			"type": "object",
			"properties": {
				"provider": {
					"description": "Provider",
					"type": "string",
					"oneOf": [
						{"enum": ["github"]}
					]
				},
				"username": {
					"description": "Github username",
					"type": "string",
					"minLength": 1
				},
				"project": {
					"description": "Github project",
					"type": "string",
					"minLength": 1
				}
			},
			"required": ["provider", "username", "project"]
		},
		"bitbucket": {
			"description": "Bitbucket repository",
			"type": "object",
			"properties": {
				"provider": {
					"description": "Provider",
					"type": "string",
					"oneOf": [
						{"enum": ["bitbucket"]}
					]
				},
				"username": {
					"description": "Bitbucket username",
					"type": "string",
					"minLength": 1
				},
				"project": {
					"description": "Bitbucket project",
					"type": "string",
					"minLength": 1
				}
			},
			"required": ["provider", "username", "project"]
		}
	}
}
